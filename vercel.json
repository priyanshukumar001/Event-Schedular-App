{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/user/(.*)", "dest": "/backend/user/$1" },
    { "src": "/admin/(.*)", "dest": "/backend/admin/$1" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
